{
	"name": "mass-linter",
	"version": "1.0.0",
	"description": "A package to lint *all* js files",
	"main": "src/index.js",
	"scripts": {
		"start": "set UV_THREADPOOL_SIZE=10 && node --max-old-space-size=8192 ./src/index.js",
		"start:dry": "set UV_THREADPOOL_SIZE=10 && node --max-old-space-size=8192 ./src/index.js --dry-run",
		"clean": "rimraf node_modules/ logs/"
	},
	"keywords": [
		"lint",
		"eslint",
		"prettier"
	],
	"author": "Roee Shapira",
	"license": "ISC",
	"dependencies": {
		"eslint": "^6.8.0",
		"fs-extra": "^8.1.0",
		"glob": "^7.1.6",
		"prettier": "^1.19.1",
		"react": "^16.11.0"
	},
	"devDependencies": {
		"@types/eslint": "^6.1.7",
		"@types/fs-extra": "^8.0.1",
		"@types/glob": "^7.1.1",
		"@types/node": "^13.7.0",
		"@types/prettier": "^1.19.0",
		"rimraf": "^3.0.1"
	}
}
